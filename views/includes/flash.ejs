<% if(success && success.length){ %>
<div
    class="alert alert-success alert-dismissible fade show col-6 offset-3"
    role="alert"
>
    <%= success %>

    <button
        type="button"
        class="btn-close"
        data-bs-dismiss="alert"
        aria-label="Close"
    ></button>
</div>

<% } %> <% if(error && success.length){ %>
<div
    class="alert alert-danger dismissible fade show col-6 offset-3"
    role="alert"
>
    <%= console.error(); %>

    <button
        type="button"
        class="btn-close"
        data-bs-dismiss="alert"
        aria-label="Close"
    ></button>
</div>

<% } %>
